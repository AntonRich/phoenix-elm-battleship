#game_show
  display: flex
  flex: 1
  width: 100%
  height: 100vh
  flex-direction: row
  flex-wrap: wrap

  #boards_container
    flex: 3
    display: flex
    flex-direction: column
    flex-wrap: wrap;
    padding: $small-spacing

    > header
      flex: 1

    > .grid
      flex: 5
      width: 100%
      height: 100%
      display: flex
      flex-direction: column
      border: 1px solid #fff


      .row
        flex: 1
        display: flex

        &:not(:last-of-type)
          border-bottom: 1px solid #fff

        .cell
          flex: 1

          &:not(:last-of-type)
            border-right: 1px solid #fff

    #ship_selector
      flex: 3



  #chat_container
    background: $light-gray
    flex: 1
