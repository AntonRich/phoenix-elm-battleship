#game_show
  display: flex
  flex: 1
  width: 100%
  height: 100vh
  flex-direction: row
  flex-wrap: wrap

  #main_section
    flex: 3
    display: flex
    flex-direction: column

  #game_header
    background: $gray
    padding: $base-spacing*1.5 $small-spacing
    text-align: center

    h1
      margin: 0

  #boards_container
    flex: 3
    display: flex
    flex-direction: row
    flex-wrap: wrap
    overflow-y: auto
    height: 100%


    #opponents_board_container
      flex: 1
      display: flex
      overflow-y: auto
      padding: $small-spacing
      flex-direction: column

      header
        text-align: center

    #my_board_container
      flex: 1
      background-color: $light-gray
      overflow-y: auto
      padding: $small-spacing
      flex-direction: column

      header
        text-align: center


    .grid
      display: flex
      flex-direction: column
      margin-bottom: $base-spacing


      &.pointer
        .cell:not(.header)
          cursor: pointer

      .row
        flex: 1
        display: flex
        min-height: 40px

        > .cell
          flex: 1
          border-color: rgba(#000, .2)
          border-style: solid
          border-width: 1px 1px 0 0
          display: flex
          align-items: center
          justify-content: center

          &:not(.header)
            background: $blue

          &.ship
            background: $gray

          &:last-of-type
            border-right-width: 3px

          &:nth-child(2)
            border-left-width: 3px


          &.header
            border: 0px none
            font-family: $heading-font-family

        &:nth-child(2)
          > .cell
            border-top-width: 3px

        &:last-of-type
          > .cell:not(.header)
            border-bottom-width: 3px

    #ship_selector
      padding: $small-spacing

      .orientation
        text-transform: uppercase
        font-weight: bold
        border-bottom: 1px dotted $dark-gray

      ul
        list-style: none
        padding: 0
        margin: 0

        li
          margin-bottom: 1em
          width: auto
          cursor: pointer
          display: inline-block
          margin-right: $small-spacing

          &.active
            .ship
              span
                background-color: rgba($blue, .5)

          .ship
            > span
              display: inline-block
              width: 25px
              height: 25px
              background: $dark-gray

              &:not(:last-of-type)
                border-right: 1px solid $gray



  #chat_container
    background: $light-gray
    flex: 1
    display: flex
    flex-direction: column
    padding: $small-spacing
    display: flex

    .status
      display: inline-block
      width: 10px
      height: 10px
      vertical-align: middle
      background: $gray
      border-radius: 50%

      &.connected
        background: $green

    .messages-container
      background: rgba(#fff, .5)
      flex: 1
      border-radius: $base-border-radius
      display: flex
      padding: $base-spacing 0

      ul
        list-style: none
        padding: 0
        margin: 0
        overflow-y: scroll
        flex: 1

        li
          padding: 0 $base-spacing

    .form-container
      padding-top: $small-spacing

      textarea
        width: 100%
