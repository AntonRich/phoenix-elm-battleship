#game_show
  display: flex
  flex: 1
  width: 100%
  height: 100vh
  flex-direction: row
  flex-wrap: wrap

  #boards_container
    flex: 3
    display: flex
    flex-direction: column
    flex-wrap: wrap
    overflow-y: scroll
    height: 100%

    #game_header
      background: $gray
      padding: $base-spacing*1.5 $small-spacing
      text-align: center

      h1
        margin: 0

    #opponents_board_container
      flex: 1
      display: flex
      flex-direction: row

    #my_board_container
      flex: 1
      display: flex
      flex-direction: row
      background-color: $light-gray


    .grid
      flex: 5
      display: flex
      flex-direction: column
      padding: $small-spacing

      &.pointer
        .cell:not(.header)
          cursor: pointer

      .row
        flex: 1
        display: flex

        > .cell
          flex: 1
          border-color: rgba(#000, .2)
          border-style: solid
          border-width: 1px 1px 0 0
          display: flex
          align-items: center
          justify-content: center

          &:not(.header)
            background: $blue

          &.ship
            background: $gray

          &:last-of-type
            border-right-width: 3px

          &:nth-child(2)
            border-left-width: 3px


          &.header
            border: 0px none
            font-family: $heading-font-family

        &:nth-child(2)
          > .cell
            border-top-width: 3px

        &:last-of-type
          > .cell:not(.header)
            border-bottom-width: 3px

    #ship_selector
      flex: 2
      padding: $small-spacing*5 $small-spacing $small-spacing $small-spacing

      ul
        list-style: none
        padding: 0
        margin: 0

        li
          padding: $small-spacing
          border: 1px solid rgba($blue, .5)
          margin-bottom: 1em
          width: auto
          cursor: pointer

          &.active
            background-color: rgba($blue, .5)



  #chat_container
    background: $light-gray
    flex: 1
    display: flex
    flex-direction: column
    padding: $small-spacing
    display: flex

    .status
      display: inline-block
      width: 10px
      height: 10px
      vertical-align: middle
      background: $gray
      border-radius: 50%

      &.connected
        background: $green

    .messages-container
      background: rgba(#fff, .5)
      flex: 1
      border-radius: $base-border-radius
      display: flex
      padding: $base-spacing 0

      ul
        list-style: none
        padding: 0
        margin: 0
        overflow-y: scroll
        flex: 1

        li
          padding: 0 $base-spacing

    .form-container
      padding-top: $small-spacing

      textarea
        width: 100%
